# ===========================
# API ANAHTARLARI
# ===========================

# Google Gemini API (AI için gerekli)
# https://makersuite.google.com/app/apikey adresinden alınabilir
GEMINI_API_KEY=your_gemini_api_key_here

# Scopus API (Elsevier Developer Portal'dan alınabilir)
# https://dev.elsevier.com/
SCOPUS_API_KEY=your_scopus_api_key_here


# ===========================
# TELEGRAM BOT
# ===========================

# Telegram Bot Token (@BotFather'dan alınır)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Chat ID (botunuzla konuşup /start yapın, loglardan görün)
TELEGRAM_CHAT_ID=your_chat_id_here


# ===========================
# WHATSAPP BUSINESS API
# ===========================

# WhatsApp Cloud API Token (Meta Business Suite'den alınır)
# https://developers.facebook.com/docs/whatsapp/cloud-api/get-started
WHATSAPP_TOKEN=your_whatsapp_business_api_token_here

# WhatsApp Phone Number ID
WHATSAPP_PHONE_ID=your_whatsapp_phone_number_id_here

# Webhook Doğrulama Token (kendiniz belirleyebilirsiniz)
WHATSAPP_VERIFY_TOKEN=academic_eye_webhook_2024


# ===========================
# MENDELEY OAUTH
# ===========================

# Mendeley Developer Portal'dan alınır
# https://dev.mendeley.com/
MENDELEY_CLIENT_ID=your_mendeley_client_id_here
MENDELEY_CLIENT_SECRET=your_mendeley_client_secret_here

# Local development için callback URL
MENDELEY_REDIRECT_URI=http://localhost:5000/mendeley_callback


# ===========================
# FLASK AYARLARI
# ===========================

# Flask gizli anahtarı (rastgele bir string kullanın)
# Python'da: import secrets; print(secrets.token_hex(32))
FLASK_SECRET_KEY=your_random_secret_key_here

# Debug modu (Production'da False olmalı)
FLASK_DEBUG=True


# ===========================
# OPSIYONEL AYARLAR
# ===========================

# Semantic Scholar API (isteğe bağlı, rate limit için)
# SEMANTIC_SCHOLAR_API_KEY=your_api_key_here

# Database yolu (varsayılan: academic_memory.db)
# DATABASE_NAME=academic_memory.db

# Vector DB yolu (varsayılan: academic_vector_db)
# VECTOR_DB_PATH=academic_vector_db
